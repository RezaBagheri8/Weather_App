<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <size
                android:width="100dp"
                android:height="40dp" />
            <gradient
                android:angle="90"
                android:startColor="#48319D"
                android:endColor="#260C4E" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <item android:top="10dp" android:gravity="top">
        <shape>
            <size
                android:width="5dp"
                android:height="4dp" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>
